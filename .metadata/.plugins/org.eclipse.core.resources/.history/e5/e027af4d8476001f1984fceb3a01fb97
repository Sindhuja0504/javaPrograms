package seleniumBasic;

public class StringMethod {

	public static void main(String[] args) {
		
		//Upper case
		 String value1 = "tEstLeAf";
		 String uppercase = value1.toUpperCase();
		 System.out.println(uppercase);
		 
		 //lowercase
		String lowecase =value1.toLowerCase();
		System.out.println(lowecase);
		
		//split
		String value2 = "No Such Element Exception";
		String[] letters = value2.split("e");
		System.out.println(letters.length);
		
		for(int i=0; i< letters.length; i++) {
			System.out.println(letters[i]);	
		}
		// replace
		String name = "Sindhu";
		String val = name.replace('d','D');
		System.out.println("replaced value: " + val);
		
		//replace all
		String value3 = "im Studing 07 Selenium";
		String demo= value3.replaceAll("[a-z]","@");
		System.out.println("the demo :" + demo);
		
		//sub string TESTLEAF
		String name2 = value1.substring(3);
		System.out.println("substring value: " + name2);
		String name3 = value1.substring(2, 6);
		System.out.println("substring value : " + name2);
	}
		 
}	 


