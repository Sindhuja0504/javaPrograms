package seleniumBasic;

import java.util.ArrayList;
import java.util.Collections;
import java.util.Iterator;
import java.util.List;

public class ListMethod {

	public static void main(String[] args) {
		
		List<String> student = new ArrayList<String>();
		//add() method
		student.add("sindhu");
		student.add("sriram");
		student.add("anbu");
		student.add("ramya");
		System.out.println("added the student name :" + student);
		
		//add()
		student.add(3,"riya"); // while add we can give 2 argument
		System.out.println(student);
		
		//get()
		String value = student.get(1);
		System.out.println(value);
		
		//size
		int number = student.size();
		System.out.println(number);
		
		//remove
		String num = student.remove(3);// one can give 1 argument
		System.out.println(student);
		
		//sort collection
		Collections.sort(student);
		for (int i = 0; i < student.size(); i++) {
			System.out.println(student.get(i));
			
		}	
		//clear
		student.clear();
	}

}
